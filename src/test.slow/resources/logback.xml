<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable TRACE logging for MCP packages during tests -->
    <logger name="io.modelcontextprotocol" level="TRACE"/>
    <logger name="io.modelcontextprotocol.client" level="TRACE"/>
    <logger name="io.modelcontextprotocol.server" level="TRACE"/>
    <logger name="io.modelcontextprotocol.spec" level="TRACE"/>
    <logger name="io.modelcontextprotocol.client.transport" level="TRACE"/>
    <logger name="io.modelcontextprotocol.server.transport" level="TRACE"/>
    
    <!-- Reactor for async debugging -->
    <logger name="reactor" level="DEBUG"/>
    <logger name="reactor.core" level="DEBUG"/>

    <!-- ReVa specific logging -->
    <logger name="reva" level="DEBUG"/>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>